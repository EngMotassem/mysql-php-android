<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mac.realmadrid.DetailsActivity"
    tools:showIn="@layout/activity_details">

    <TextView
        android:text="@string/title_activity_details"
        android:layout_height="wrap_content"
        android:id="@+id/moeDetails"
        android:layout_width="wrap_content"
        android:layout_marginStart="64dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageViewDetails"
        android:contentDescription="@string/title_activity_details"
        tools:ignore="MissingConstraints"
        android:layout_marginStart="176dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="@+id/moeDetails"
        android:layout_marginTop="56dp" />

    <ImageButton
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_call"
        android:id="@+id/phoneimageButton"
        android:layout_width="wrap_content"
        android:contentDescription="@string/action_search"
        android:layout_marginStart="64dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/imageViewDetails" />

    <ImageButton
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_dialog_email"
        android:id="@+id/emailImageButton"
        android:contentDescription="@string/title_activity_details"
        android:layout_width="wrap_content"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/imageViewDetails"
        android:layout_marginStart="136dp"
        app:layout_constraintLeft_toRightOf="@+id/phoneimageButton" />

</android.support.constraint.ConstraintLayout>
